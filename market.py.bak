def open_external(label, url, key=None):
    js = f"window.open('{url}', '_blank');"
    st.markdown(
        f"""
        <button onclick="{js}" style="
            background-color:#2E8B57;
            color:white;
            padding:10px 20px;
            border:none;
            border-radius:8px;
            cursor:pointer;
            width:100%;
            font-size:16px;
        ">{label}</button>
        """,
        unsafe_allow_html=True
    )
